powerStripChip 0
powerModuleChip 0 
powerModuleOptical 0

plotColor 6


// In all that follows, what is called 'crystalsContainer' is an UNTILTED parallelepiped, which contains the tilted crystals.

numSensors 1            // crystalsContainer is considered as 1 sensor by the core of tkLayout.
                        // More detailed description (crystals) for the XML export only.

width 184.0             // crystalsContainer width
length 52.2              // crystalsContainer length
physicalLength 52.2      // to avoid collisions with previous module in barrels
sensorThickness 4.0      // crystalsContainer thickness


Sensor 1 {
  sensorType largepix

  crystalLayout 5
  passiveComponentLayout 0
  
  numROCX 1             // Only one chip in total
  numROCY 1
  
  numCrystalsX 3
  numCrystalsY 16
  
  alveolaShift 0.0      // crystals are placed at +Z = 1 mm and -Z = 1 mm alternatively.
  
  crystalWidth  57.6
  crystalLength 3.15
  crystalThickness 3.0
  crystalTiltAngle 0.0 // rotation along X axis
  
  numStripsAcross 4    // TO DO : remove
  numSegments 3        // IMPORTANT: used for barZ to determine grouping along phi
}



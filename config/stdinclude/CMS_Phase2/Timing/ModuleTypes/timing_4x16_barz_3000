  sensorType largepix

  crystalLayout 3
  passiveComponentLayout 3
  passiveLayout2LayerThickness 1.0 

  numROCX 1             // Only one chip in total
  numROCY 1
  
  numCrystalsX 64
  numCrystalsY 1
  
  alveolaShift 1.50      // crystals are placed at +Z = 1 mm and -Z = 1 mm alternatively.
  
